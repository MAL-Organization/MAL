<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.github</groupId>
	<artifactId>mal</artifactId>
	<version>1.0.9-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>mal</name>
	<description>MAL library</description>

	<properties>
		<build.configurations>STM32F072CB,STM32F072RB,MINGW</build.configurations>
		<build.excludes />
		<optimization.levels>optimize,more,most,size,debug,none</optimization.levels>
		<path.to.workspace>${basedir}/../eclipse</path.to.workspace>
	</properties>

	<scm>
		<connection>scm:git:git@github.com:MAL-Organization/MAL.git</connection>
        <url>scm:git:git@github.com:MAL-Organization/MAL.git</url>
        <developerConnection>scm:git:git@github.com:MAL-Organization/MAL.git</developerConnection>
		<tag>master</tag>
	</scm>
	
	<distributionManagement>
		<repository>
			<id>internal.repo</id>
			<name>Temporary Staging Repository</name>
			<url>file://${project.build.directory}/mvn-repo</url>
		</repository>
	</distributionManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.4</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.10.3</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.8.2</version>
			</plugin>
			<plugin>
			  <artifactId>maven-release-plugin</artifactId>
			  <version>2.5.3</version>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>3.0.0</version>
				<executions>
					<execution>
						<id>copy-headers</id>
						<phase>clean</phase>
						<goals>
							<goal>clean</goal>
						</goals>
						<configuration>
							<filesets>
								<fileset>
									<directory>${path.to.workspace}</directory>
									<includes>
										<include>**/*</include>
									</includes>
									<excludes />
									<followSymlinks>false</followSymlinks>
								</fileset>
							</filesets>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>build</id>
						<phase>compile</phase>
						<configuration>
							<target>
								<echoproperties destfile="${project.build.directory}/initialize.properties" />
								<exec failifexecutionfails="true" executable="python3" failonerror="true">
									<arg value="${project.build.directory}\..\build-scripts\compile.py" />
									<arg value="${project.build.directory}/initialize.properties" />
								</exec>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
                        <id>default-test</id>
                        <phase>test</phase>
                        <configuration>
                            <target>
                                <echoproperties destfile="${project.build.directory}/test.properties" />
                                <exec failifexecutionfails="true" executable="python3" failonerror="true">
									<arg value="${project.build.directory}\..\build-scripts\test.py" />
									<arg value="${project.build.directory}/test.properties" />
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>default-install</id>
                        <phase>install</phase>
                        <configuration>
                            <target>
                                <echoproperties destfile="${project.build.directory}/install.properties" />
                                <exec failifexecutionfails="true" executable="java" failonerror="true">
									<arg value="-jar" />
									<arg value="${project.build.directory}\..\build-scripts\install\mal-install.jar" />
									<arg value="${basedir}" />
									<arg value="${settings.localRepository}" />
									<arg value="${project.version}" />
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<descriptors>
						<descriptor>assembly.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
				  <execution>
					<id>assembly</id>
					<phase>package</phase>
					<goals>
					  <goal>single</goal>
					</goals>
				  </execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.8.1</version>
				<configuration>
					<altDeploymentRepository>internal.repo::default::file://${project.build.directory}/mvn-repo</altDeploymentRepository>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>